
pipeline {
    agent any
    tools{
        maven 'maven_3_8_6'
        jdk 'JDK_11_0_9'
    }
    stages {
        stage('Initialize'){
            steps{
                echo "PATH = ${M2_HOME}/bin:${PATH}"
                echo "M2_HOME = /opt/maven"
            }
        }
        stage("Clean Up") {
            steps {
                deleteDir()
            }
        }
        stage("Clone Repo") {
            steps {
                sh "git clone https://github.com/minhtv14/SpringBootHelloWord.git"
            }
        }
        stage("Build") {
            steps {
                dir("SpringBootHelloWord") {
                    sh "mvn clean install"
                }
            }
        }
        stage("Test") {
            steps {
                dir("SpringBootHelloWord") {
                    sh "mvn test"
                }
            }
        }
    }
}
